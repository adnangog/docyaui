<div class="row align-items-center justify-content-md-center" style="height:600px;">

  <div class="col col-lg-4">

    <div class="card">
      <h3 class="card-header">{{title}}</h3>
      <div class="card-body">
        {{#if error}}
                <div class="alert alert-danger" role="alert">
          {{ message }}
          {{# each errors }}
          {{ this.msg }}
          {{/each}}
        </div>
        {{/if}}
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input type="type" class="form-control" id="loginEmail" name="loginEmail" value="{{ email }}" aria-describedby="emailHelp"
              placeholder="Mail adresinizi girin.">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Şifre</label>
            <input type="password" class="form-control" id="loginPassword" name="loginPassword" value="{{ password }}" placeholder="Şifrenizi girin">
          </div>
          <input type="hidden" name="url" id="url" value="{{url}}" />
          <button type="submit" class="btn btn-dark">Giriş</button>
        </form>
      </div>
    </div>
  </div>
</div>