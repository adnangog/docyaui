<div style="padding:0 15px;">
    <div class="row">

        <div class="col-md-12" style="background-color: #fff; padding: 20px; border-left:10px solid #f2f2f2;">
            <form method="POST" id="createForm" action="{{#if edit}}/organizations/{{ form._id }}{{else}}/organizations/add{{/if}}">
                <div class="form-group row bg-light" style="padding:10px 0; margin:0; margin-bottom:15px;">
                    <label for="formName" class="col-sm-2 col-form-label">Şema Adı : </label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="organizationName" name="organizationName" placeholder="Şema Adı" value="{{organization.name}}">
                        <input type="hidden" id="tree" name="tree" value="{{tree}}">
                    </div>
                </div>
                <div class="row form-body">
                    <div class="col-md-12" data-parent id="OrganizationScene">

                    </div>
                </div>
                <div class="col-md-12 text-right">
                    <button type="submit" id="btnSaveForm" class="btn btn-success">Kaydet</button>
                </div>
            </form>
        </div>

    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="organizationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Duzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="modelContent">
                    <div class="form-group">
                        <label for="department">Departman</label>
                        <select class="form-control" id="department" name="department">
                            <option>Lütfen seçin.</option>
                            {{# each departments }}
                            <option value="{{ this.[0] }}">{{ this.[1] }}</option>
                            {{/ each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="department">Kullanici</label>
                        <select class="form-control" id="user" name="user">
                            <option>Lütfen seçin.</option>
                            {{# each users }}
                            <option value="{{ this.[0] }}">{{ this.[1] }} {{ this.[2] }}</option>
                            {{/ each}}
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Tamam</button>
                </div>
            </div>
        </div>
    </div>